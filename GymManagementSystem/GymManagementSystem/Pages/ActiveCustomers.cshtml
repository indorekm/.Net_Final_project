@page
@model GymManagementSystem.Pages.ActiveCustomersModel
@{
    ViewData["Title"] = "Active Customers";
}

<h2>Active Customers</h2>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="glyphicon glyphicon-list"></i> Active Customers</h3>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th><i class="glyphicon glyphicon-sort-by-alphabet"></i> @Html.DisplayNameFor(model => model.ActiveCustomer[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.ActiveCustomer[0].Age)</th>
                    <th>@Html.DisplayNameFor(model => model.ActiveCustomer[0].Bmi)</th>
                    <th>@Html.DisplayNameFor(model => model.ActiveCustomer[0].Gender)</th>
                    <th>@Html.DisplayNameFor(model => model.ActiveCustomer[0].Schedule.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.ActiveCustomer[0].Membership.MembershipType)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.ActiveCustomer)
                {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Age</td>
                    <td>@customer.Bmi</td>
                    <td>@customer.Gender</td>
                    <td>@customer.Schedule.Description</td>
                    <td>@customer.Membership.MembershipType</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

