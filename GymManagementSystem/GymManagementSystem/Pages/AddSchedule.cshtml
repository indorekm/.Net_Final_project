@page
@model GymManagementSystem.Pages.AddScheduleModel
@{
    ViewData["Title"] = "Add Schedule";
}

<h2>Add Trainer's Schedule</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">
            <div class="form-group">
                <label asp-for="AddScheduleForm.TrainerId" class="control-label"></label>
                <select asp-for="AddScheduleForm.TrainerId" class="form-control" asp-items="ViewBag.Trainers"></select>
                <span asp-validation-for="AddScheduleForm.TrainerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddScheduleForm.Day" class="control-label"></label>
                <select asp-for="AddScheduleForm.Day" class="form-control" asp-items="ViewBag.Day"></select>
                <span asp-validation-for="AddScheduleForm.Day" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="AddScheduleForm.StartTime" class="control-label"></label>
                <input asp-for="AddScheduleForm.StartTime" class="form-control" />
                <span asp-validation-for="AddScheduleForm.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddScheduleForm.EndTime" class="control-label"></label>
                <input asp-for="AddScheduleForm.EndTime" class="form-control" />
                <span asp-validation-for="AddScheduleForm.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Schedule" class="btn btn-danger" />
            </div>

        </form>
    </div>
</div>
