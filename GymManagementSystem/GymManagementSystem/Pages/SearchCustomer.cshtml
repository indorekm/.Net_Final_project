@page
@model GymManagementSystem.Pages.SearchCustomerModel
@{
    ViewData["Title"] = "Search Customer";
}

<h2>Search Customer</h2>

<form action="" method="POST" style="margin-top: 50px;">
    <div class="form-group">
        <label class="control-label" for="SearchCustomerName">Customer</label>
        <input type="text" class="form-control" name="SearchCustomerName" id="SearchCustomerName" />
    </div>
    <div class="form-group">
        <input type="submit" value="Search Customer" class="btn btn-default" />
    </div>
</form>

@if (Model.SearchCompleted)
{
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="glyphicon glyphicon-user"></i> Customer Details</h3>
        </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Bmi</th>
                <th>Schedule</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.SearchResults.Count > 0)
            {
                @foreach (var customer in Model.SearchResults)
                {
                    <tr>
                        <td>@customer.Name</td>
                        <td>@customer.Gender</td>
                        <td>@customer.Age</td>
                        <td>@customer.Bmi</td>
                        <td>@customer.Schedule.Description</td>
                        <td><a href="/UpdateCustomer?id=@customer.Id">Update Profile</a></td>
                    </tr>
                }
            }
            else
            {
                <tr class="danger">
                    <td colspan="6" class="text-center">
                        No results found for term "@Model.SearchCustomerName"
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
}
else
{
    <div class="alert alert-info">
        <p>
            Enter the search terms into the box and click <strong>Search Customer</strong>
        </p>
    </div>
}