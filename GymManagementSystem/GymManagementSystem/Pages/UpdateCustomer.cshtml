@page
@model GymManagementSystem.Pages.UpdateCustomerModel
@{
    ViewData["Title"] = "Update Customer";
}

<h2 class="text-muted" style="padding-top: 20px;">Update Customer</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UpdateCustomerForm.ScheduleId" class="control-label"></label>
                    <select asp-for="UpdateCustomerForm.ScheduleId" class="form-control" asp-items="ViewBag.ScheduleId"></select>
                    <span asp-validation-for="UpdateCustomerForm.ScheduleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UpdateCustomerForm.Height" class="control-label"></label>
                    <input asp-for="UpdateCustomerForm.Height" class="form-control" />
                    <span asp-validation-for="UpdateCustomerForm.Height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UpdateCustomerForm.Weight" class="control-label"></label>
                    <input asp-for="UpdateCustomerForm.Weight" class="form-control" />
                    <span asp-validation-for="UpdateCustomerForm.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update Customer" class="btn btn-danger" />
                </div>
            </div>                        
        </form>
    </div>
</div>