@page
@model GymManagementSystem.Pages.Membership.EditModel

@{
    ViewData["Title"] = "Membership Edit";
}

<h2>Membership Edit</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Membership.Id" />
            <div class="form-group">
                <label asp-for="Membership.MembershipType" class="control-label"></label>
                <input asp-for="Membership.MembershipType" class="form-control" />
                <span asp-validation-for="Membership.MembershipType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membership.Duration" class="control-label"></label>
                <input asp-for="Membership.Duration" class="form-control" />
                <span asp-validation-for="Membership.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membership.MembershipFee" class="control-label"></label>
                <input asp-for="Membership.MembershipFee" class="form-control" />
                <span asp-validation-for="Membership.MembershipFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
