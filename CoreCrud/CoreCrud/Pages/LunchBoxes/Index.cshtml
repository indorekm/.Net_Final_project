@model CoreCrud.Pages.LunchBoxes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LunchBox[0].LunchBoxName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LunchBox[0].SoldDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LunchBox[0].IsMicrowaveSafe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LunchBox[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LunchBox[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LunchBox[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LunchBox[0].Manufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LunchBox) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LunchBoxName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoldDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMicrowaveSafe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
