@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="height:300px; width:800px" id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div style="height:300px; width:800px" class="carousel-inner" role="listbox">
        <div style="height:300px; width:800px" class="item active">
            <img src="~/images/LunchBoxBanner3.jpg" alt="Lunch Box " @*class="img-responsive"*@ />
            <div class="carousel-caption" role="option">
                <p>
                    Discover new collection of lunch boxes.
                </p>
            </div>
        </div>
        <div style="height:300px; width:800px" class="item">
            <img src="~/images/LunchBoxBanner4.jpg" alt="Lunch Box 2" @*class="img-responsive"*@ />
            <div class="carousel-caption" role="option">
                <p>
                    Diffrent types of design and colors to offer.
                </p>
            </div>
        </div>
        <div style="height:300px; width:800px" class="item">
            <img src="~/images/LunchBoxBanner2.jpg" alt="Lunch Box 3" @*class="img-responsive"*@ />
            <div class="carousel-caption" role="option">
                <p>
                    With new technology in lunch box to serve you well.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<p>
    Welcome to largest collection of lunchboxes
</p>