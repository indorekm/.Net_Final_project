@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<center><h2>Lunch Box Collectibles</h2></center>
<hr />

@*Carousel images of luch box*@
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/LunchBoxBanner3.jpg" alt="Lunch Box " style="height:200px; width:1200px" />
            <div class="carousel-caption" role="option">
                <p>
                    Discover new collection of lunch boxes.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/LunchBoxBanner4.jpg" alt="Lunch Box 2" style="height:200px; width:1200px" />
            <div class="carousel-caption" role="option">
                <p>
                    Diffrent types of design and colors to offer.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/LunchBoxBanner2.jpg" alt="Lunch Box 3" style="height:200px; width:1200px" />
            <div class="carousel-caption" role="option">
                <p>
                    With new technology in lunch box to serve you well.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<hr />
<p>Welcome to largest collection of lunchboxes.<br /></p>

<div class="row">
    @*Lunch box Dashboard*@
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="glyphicon glyphicon-info-sign"></i> Lunchbox Dashboard</h3>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="2">Statistics</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Lunch boxes</td>
                        <td class="text-right">@Model.CountOfLunchBox</td>
                    </tr>
                    <tr>
                        <td>Lunch boxes sold</td>
                        <td class="text-right">@Model.CountOfLunchBoxSold</td>
                    </tr>
                    <tr>
                        <td>Lunch boxes not sold</td>
                        <td class="text-right">@Model.CountOfLunchBoxNotSold</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    @*Manufacturer Dashboard*@
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="glyphicon glyphicon-info-sign"></i> Manufacturer Dashboard</h3>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="2">Statistics</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Manufacturers</td>
                        <td class="text-right">@Model.CountOfManufacturer</td>
                    </tr>
                    <tr>
                        <td>Manufacturers selling online</td>
                        <td class="text-right">@Model.CountOfManufacturerSellingOnline</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    @*Manufacturer Profile*@
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="glyphicon glyphicon-list"></i> Manufacturer's Profiles</h3>
            </div>
            <ul>
                @foreach (var manufacturer in Model.LunchBoxManufacturers)
                {
                    <li>
                        <a href="/ManufacturerProfile/ManufacturerProfile?id=@manufacturer.Id">@manufacturer.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>

    @*Auction link*@
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="glyphicon glyphicon-list"></i> Auction Link</h3>
            </div>
            <ul>
                <li><a asp-page="/Auction/Auction">Auction</a></li>
            </ul>
        </div>
    </div>
</div>
